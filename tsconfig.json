{
  "compilerOptions": {
    "target": "ES2017",
    "module": "ESNext",
    "moduleResolution": "node",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": false,
    "declarationDir": "./dist/types",
    "importHelpers": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
